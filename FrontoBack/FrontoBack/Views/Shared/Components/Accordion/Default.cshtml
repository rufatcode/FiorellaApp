@{
    Layout = null;
    int index = 0;
}
@model List<Accordion>

<div class="col-md-6 my-5">
    @foreach (var item in Model)
    {
        <div class="question @(index==0?"active":"") border p-3 mt-3">
            <i class="fas fa-minus fa-sm mr-2"></i>
            <span>@item.Title</span>
        </div>
        <div class="answer @(index==0?"active":"")">
            <p class="py-3">
               @item.Content
            </p>
        </div>

         index++;
     }


</div>
