@{
    ViewBag.Title = "Index";
}

@model List<Ganre>



<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <a asp-action="Create" class="btn btn-outline-success my-3">Create Ganre</a>
            <h4 class="card-title">Ganre Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Book</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ganre in Model)
                        {
                            <tr>
                                <td>@ganre.Name</td>
                                <td>@(@ganre.BookGanres.FirstOrDefault()!=null? @ganre.BookGanres.FirstOrDefault().Book.Name:"")</td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@ganre.Id"><i class="mdi mdi-delete btn btn-outline-danger "> </i></a>
                                    <a asp-action="Update" asp-route-id="@ganre.Id"><i class="mdi mdi-table-edit btn btn-outline-warning"> </i></a>
                                    <a asp-action="Detail" asp-route-id="@ganre.Id"> <i class="mdi mdi-account-card-details btn btn-outline-primary"> </i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
