@{
    ViewBag.Title = "Detail";
}
@model Product

    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            
            <div class="card-body">
                <img width="200" height="150" src="~/img/@Model.ImgSrc" />
                <h4 class="card-title my-2 text-primary"><span class="text-danger">Product Name:</span> @Model.Name</h4>

                <p class="text-muted">
                    <span class="text-warning">Product Price:</span> @Model.Price
                </p>
                <h4 class="card-title text-success"><span class="text-success">Catagory Name:</span> @Model.Catagories.Name</h4>

                <p>
                    <span class="text-danger"> Catagory Description:</span> @Model.Catagories.Description
                </p>
            </div>
        </div>
    </div>
