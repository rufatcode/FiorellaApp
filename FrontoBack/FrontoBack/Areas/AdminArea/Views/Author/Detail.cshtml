@{
    ViewBag.Title = "Detail";
}
@model DetailAuthorVM

<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Author Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Location</th>
                            <th>Books</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Name</td>
                            <td>@Model.Age</td>
                            <td>@Model.Street.Name,@Model.Street.City.Name,@Model.Street.City.Country.Name</td>
                            <td>
                                <ul>
                                    @foreach (var book in Model.BookAuthors)
                                    {
                                        <li style="list-style:none;" class="text-primary">@book.Book.Name</li>
                                    }
                                </ul>
                            </td>
                           
                        </tr>


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

