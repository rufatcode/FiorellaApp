@{
    ViewBag.Title = "Index";
}
@model List<Author>

<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <a asp-action="Create" class="btn btn-outline-success my-3">Create Author</a>
            <h4 class="card-title">Author Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Location</th>
                            <th>Books</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var author in Model)
                        {
                            <tr>
                                <td>@author.Name</td>
                                <td>@author.Age</td>
                                <td>@author.Street.City.Name</td>
                                <td>
                                    @(author.BookAuthors.FirstOrDefault()!= null?@author.BookAuthors.FirstOrDefault().Book.Name:"")
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@author.Id"><i class="mdi mdi-delete btn btn-outline-danger "> </i></a>
                                    <a asp-action="Update" asp-route-id="@author.Id"><i class="mdi mdi-table-edit btn btn-outline-warning"> </i></a>
                                    <a asp-action="Detail" asp-route-id="@author.Id"> <i class="mdi mdi-account-card-details btn btn-outline-primary"> </i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
