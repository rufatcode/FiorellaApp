@{
    ViewBag.Title = "Index";
}

@model CreateAuthorVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Author form</h4>
            <p class="card-description">
                Basic form layout
            </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" id="AuthorName" placeholder="Author Name" autocomplete="off">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age"></label>
                    <input asp-for="Age" class="form-control" id="AuthorAge" placeholder="Author Age" autocomplete="off">
                    <span class="text-danger" asp-validation-for="Age"></span>
                </div>
                <div class="form-group">
                    <label class="d-block">Cities</label>
                    <select asp-for="StreetId" asp-items="@ViewBag.Streets "></select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section CostumScripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

